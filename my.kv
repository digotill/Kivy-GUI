<CreateAccountWindow>:
    name: "create"

    namee: namee
    email: email
    password: passw

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            BaseLabel:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}

            BaseLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "

            BaseTextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: namee
                multiline: False

            BaseLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "

            BaseTextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                id: email
                multiline: False

            BaseLabel:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "

            BaseTextInput:
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                id: passw
                multiline: False
                password: True

        BaseButton:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            text: "Already have an Account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        BaseButton:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

<LoginWindow>:
    name: "login"

    email: email
    password: password

    FloatLayout:

        BaseLabel:
            text:"Email: "
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        BaseTextInput:
            id: email
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        BaseLabel:
            text:"Password: "
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        BaseTextInput:
            id: password
            multiline: False
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        BaseButton:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        BaseButton:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            text: "Don't have an Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<MainWindow>:
    n: n
    email: email
    created:created

    FloatLayout:
        BaseLabel:
            id: n
            pos_hint:{"x": 0.1, "top":0.9}
            size_hint:0.8, 0.2
            text: "Account Name: "

        BaseLabel:
            id: email
            pos_hint:{"x": 0.1, "top":0.7}
            size_hint:0.8, 0.2
            text: "Email: "

        BaseLabel:
            id: created
            pos_hint:{"x": 0.1, "top":0.5}
            size_hint:0.8, 0.2
            text: "Created: "

        BaseButton:
            pos_hint:{"x":0.2, "y": 0.1}
            size_hint:0.6,0.2
            text: "Log Out"
            on_release:
                app.root.current = "login"
                root.manager.transition.direction = "down"